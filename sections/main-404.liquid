<style type="text/css">
  .template-404 > div {
    text-align: center;
    padding: 3rem 0;
    font-family: Termina;
    font-size: 4rem;
  }
  
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<div class="template-404 page-width page-margin center">
  <p>
    {{ 'templates.404.subtext' | t }} Page Not Found
  </p>
  <div>
    <h1 class="title">
      {{ 'templates.404.title' | t }}
    </h1>
    <div>That page has not been found or no longer exists.</div>
    <a href="{{ routes.all_products_collection_url }}">
      {% comment %}{{ 'general.continue_shopping' | t }} {% endcomment %}RETURN TO HOMEPAGE
    </a>
  </div>  
</div>

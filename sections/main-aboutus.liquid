<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-aboutus.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "t:sections.main-aboutus.settings.image.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.main-aboutus.presets.name"
      }
    ]
  }
{% endschema %}
{% javascript %}
  const banners = document.querySelectorAll('.banner_cover');
  const target = document.querySelectorAll('.banner_hover');
  
  for(let i=0; i<banners.length; i++){
    const elem = window.getComputedStyle(banners[i],':after');
  	banners[i].addEventListener("mouseover",() => {
      console.log(elem.getPropertyValue('display'));
      elem.setProperty('display','block')
      target[i].style.display = "block";
  	})
  	banners[i].addEventListener("mouseout",() => {
      console.log(elem.getPropertyValue('display'));
      elem.setProperty('display','none')
      target[i].style.display = "none";
  	})
  }
  
{% endjavascript %}


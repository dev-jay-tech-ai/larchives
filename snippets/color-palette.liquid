{%- assign colorStyle = 'style=background-color:' -%}
{%- assign bgStyle = 'style=background-image:url(' -%}
{%-  assign colorVal = value | downcase  -%}

{% if colorVal == 'azure' %}
{% assign bgcolor = '#bbeaf9' | prepend: colorStyle %}
{% elsif colorVal == 'beige' %}
{% assign bgcolor = '#fcd2ba' | prepend: colorStyle %}  
{% elsif colorVal == 'brown' %}
{% assign bgcolor = '#996210' | prepend: colorStyle %}   
{% elsif colorVal == 'burgundy' %}
{% assign bgcolor = '#963421' | prepend: colorStyle %}
{% elsif colorVal == 'charcoal' %}
{% assign bgcolor = '#4c4643' | prepend: colorStyle %}    
{% elsif colorVal == 'camel' %}
{% assign bgcolor = '#c6672b' | prepend: colorStyle %}  
{% elsif colorVal == 'denim' %} 
{% assign bgcolor = 'denim.png' | asset_url | prepend: bgStyle | append: ')' %}
{% elsif colorVal == 'gold' %}
{% assign bgcolor = 'gold.png' | asset_url | prepend: bgStyle | append: ')' %}
{% elsif colorVal == 'ivory' %}
{% assign bgcolor = '#f2e5d0' | prepend: colorStyle %}
{% elsif colorVal == 'khaki' %}
{% assign bgcolor = '#797901' | prepend: colorStyle %}
{% elsif colorVal == 'lavender' %}
{% assign bgcolor = '#c3b3f2' | prepend: colorStyle %}  
{% elsif colorVal == 'metal' %}
{% assign bgcolor = 'metallic.png' | asset_url | prepend: bgStyle | append: ')' %}
{% elsif colorVal == 'transparency' %}
{% assign bgcolor = 'trans.png' | asset_url | prepend: bgStyle | append: ')' %}
{% elsif colorVal == 'mint' %}
{% assign bgcolor = '#76fcfc' | prepend: colorStyle %}
{% elsif colorVal == 'multi' %}
{% assign bgcolor = 'multi.png' | asset_url | prepend: bgStyle | append: ')' %}
{% elsif colorVal == 'silver' %}
{% assign bgcolor = 'silver.png' | asset_url | prepend: bgStyle | append: ')' %}
{% elsif colorVal == 'turquoise' %}
{% assign bgcolor = '#03a4ad' | prepend: colorStyle %}
{% elsif colorVal == 'taupe' %}
{% assign bgcolor = '#ccb69d' | prepend: colorStyle %}
{% elsif colorVal == 'white' %}
{% assign bgcolor = '#fff' | prepend: 'style=border-color:rgba(4,11,9,0.1);border-style:solid;border-width:1px;background-color:' %}
{% else %}
{% assign bgcolor = colorVal | prepend: colorStyle %}
{% endif %}
<script src="{{ 'mega-menu-drawer.js' | asset_url }}" defer="defer"></script>

{%- for link in section.settings.menu.links -%}
  <li>
  {%- if link.links != blank -%}
    <header-menu>
      <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
        <summary class="header__menu-item list-menu__item link focus-inset header_text_style{% if request.page_type == 'index' %} header_text_reverse{% endif %}">
          <span {%- if link.child_active %} class="header__active-menu-item"{% endif %}>{{ link.title | escape }}</span>
        </summary>
        <div id="MegaMenu-Content-{{ forloop.index }}" class="mega-menu__content gradient motion-reduce global-settings-popup" tabindex="-1">
          <div class='page-width'>
            <div class='maga-menu {% if link.title == 'SPECIAL-V' %}mega-menu-layout{% endif %}'>  
              <div class='maga-menu-category'>
                <div class="mega-menu_list-title">{{ link.title | escape }}</div>
                <ul class="mega-menu__list {% if link.title == '' %}mega-menu__list-custom{% endif %} mega-menu__list--condensed
                page-width" {% if link.title == 'DESIGNERS' %}style="columns: 4"{% endif %} 
                role="list">  
                {%- for childlink in link.links -%}
                <li>
                  <a href="{%- if childlink.links != blank -%}#{%- else -%}{{ childlink.url }}{%- endif -%}" class="mega-menu__link mega-menu__link--level-2 link{% if childlink.links != blank %} sec_depth{% endif %}{% if childlink.current %} mega-menu__link--active {% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                    {{ childlink.title | escape | capitalize }} {%- if childlink.links != blank -%}{% render 'icon-chevron-down' %}{%- endif -%} 
                  </a>
                  {%- if childlink.links != blank -%}
                  <ul class="list-unstyled {% if link.title == 'SPECIAL-V' %}list-custom{% endif %}" role="list">
                  {%- for grandchildlink in childlink.links -%}
                    <li>
                      <a href="{{ grandchildlink.url }}" class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                        {{ grandchildlink.title | escape }}
                      </a>
                    </li>
                  {%- endfor -%}
                  </ul>
                </li>
                {%- endif -%}
                {%- endfor -%}
                </ul>
              </div>
              <div>
              {% if link.title != 'DESIGNERS' %} 
                {% if link.title != 'SPECIAL-V' %} 
                <div class="mega-menu_list-title">DESIGNERS</div>
                <ul class="mega-menu__list mega-menu__list--condensed page-width" role="list">  
                {% if link.title == 'NEW ARRIVALS' %}
                  <li><a href="/collections/gucci" class="mega-menu__link mega-menu__link--level-2 link">Gucci</a></li>
                  <li><a href="/collections/prada" class="mega-menu__link mega-menu__link--level-2 link">Prada</a></li>
                  <li><a href="/collections/bottega-veneta" class="mega-menu__link mega-menu__link--level-2 link">Bottega veneta</a></li>
                  <li><a href="/collections/burberry" class="mega-menu__link mega-menu__link--level-2 link">Burberry</a></li>
                {% elsif link.title == 'CLOTHES' %}
                  <li><a href="/collections/gucci-clothes" class="mega-menu__link mega-menu__link--level-2 link">Gucci</a></li>
                  <li><a href="/collections/valnetino-clothes" class="mega-menu__link mega-menu__link--level-2 link">Valentino</a></li>
                  <li><a href="/collections/bottega-veneta-clothes" class="mega-menu__link mega-menu__link--level-2 link">Bottega veneta</a></li>
                  <li><a href="/collections/fendi-clothes" class="mega-menu__link mega-menu__link--level-2 link">Fendi</a></li>
                  <li><a href="/collections/alexander-mcqueen-clothes" class="mega-menu__link mega-menu__link--level-2 link">Alexander mcqueen</a></li>
                  <li><a href="/collections/thom-browne-clothes" class="mega-menu__link mega-menu__link--level-2 link">Thom browne</a></li>
                {% elsif link.title == 'BAG' %}
                  <li><a href="/collections/gucci-bag" class="mega-menu__link mega-menu__link--level-2 link">Gucci</a></li>
                  <li><a href="/collections/dior-bag" class="mega-menu__link mega-menu__link--level-2 link">Dior</a></li>
                  <li><a href="/collections/bottega-veneta-bag" class="mega-menu__link mega-menu__link--level-2 link">Bottega veneta</a></li>
                  <li><a href="/collections/yves-saint-laurent-bag" class="mega-menu__link mega-menu__link--level-2 link">Yves saint laurent</a></li>
                  <li><a href="/collections/fendi-bag" class="mega-menu__link mega-menu__link--level-2 link">Fendi</a></li>
                {% elsif link.title == 'SHOES' %}
                  <li><a href="/collections/chanel-shoes" class="mega-menu__link mega-menu__link--level-2 link">Chanel</a></li>
                  <li><a href="/collections/manolo-blahnik" class="mega-menu__link mega-menu__link--level-2 link">Manolo blahnik</a></li>
                  <li><a href="/collections/bottega-veneta-shoes" class="mega-menu__link mega-menu__link--level-2 link">Bottega veneta</a></li>
                  <li><a href="/collections/roger-vivier-shoes" class="mega-menu__link mega-menu__link--level-2 link">Roger vivier</a></li>
                  <li><a href="/collections/fendi-shoes" class="mega-menu__link mega-menu__link--level-2 link">Fendi</a></li>
                {% elsif link.title == 'MEN' %}
                  <li><a href="/collections/gucci-men" class="mega-menu__link mega-menu__link--level-2 link">Gucci</a></li>
                  <li><a href="/collections/bottega-veneta-men" class="mega-menu__link mega-menu__link--level-2 link">Bottega veneta</a></li>
                  <li><a href="/collections/thome-brown-men" class="mega-menu__link mega-menu__link--level-2 link">Thom browne</a></li>
                  <li style='padding-right: 0'><a href="/collections/ferragamo-men" class="mega-menu__link mega-menu__link--level-2 link">Ferragamo</a></li>
                  <li><a href="/collections/dior-accessories" class="mega-menu__link mega-menu__link--level-2 link">Tods</a></li>
                {% else %}
                  <li><a href="/collections/chanel-accessories" class="mega-menu__link mega-menu__link--level-2 link">Chanel</a></li>
                  <li><a href="/collections/gucci-accessories" class="mega-menu__link mega-menu__link--level-2 link">Gucci</a></li>
                  <li><a href="/collections/fendi-accessories" class="mega-menu__link mega-menu__link--level-2 link">Fendi</a></li>
                  <li style='padding-right: 0'><a href="/collections/bottega-veneta-accessories" class="mega-menu__link mega-menu__link--level-2 link">Bottega veneta</a></li>
                  <li><a href="/collections/dior-accessories" class="mega-menu__link mega-menu__link--level-2 link">Dior</a></li>
              {% endif %}
              </ul>
            </div>  
            {% endif %}        
            {% endif %}  
            </div>  
            <div class='maga-menu-banner'
              style="background-image: url('https://cdn.shopify.com/s/files/1/0595/6275/4206/files/
              {%- if link.title == 'CLOTHES' -%}brrrrr
              {%- elsif link.title == 'BAG' -%}18050015.jpg?v=1678203687
              {%- elsif link.title == 'SHOES' -%}18050036.jpg?v=1678203708
              {%- elsif link.title == 'MEN' -%}18050021.jpg?v=1678204333
              {%- elsif link.title == 'SPECIAL-V' -%}18050018.jpg?v=1678204320
              {%- elsif link.title == 'NEW ARRIVALS' -%}
              {%- elsif link.title == 'DESIGNERS' -%}/designers
              {%- else -%}18050001.jpg?v=1678204046
              {%- endif -%}
              ')">
              <h3>COLLECTIONS</h3>
              <p>Summer 2023</p>
              <a href='/collections
              {%- if link.title == 'CLOTHES' -%}/clothes
              {%- elsif link.title == 'BAG' -%}/bag
              {%- elsif link.title == 'SHOES' -%}/shoes
              {%- elsif link.title == 'MEN' -%}/men
              {%- elsif link.title == 'SPECIAL-V' -%}/valentino_special
              {%- elsif link.title == 'NEW ARRIVALS' -%}/new-arrival
              {%- elsif link.title == 'DESIGNERS' -%}/designers
              {%- else -%}/accessories
              {%- endif -%}
              ' class='button button--secondary button-load-custom'>SEE MORE</a>
            </div>
          </div>
        </div>
      </details>
    </header-menu>
  {%- else -%}
    <a href="{{ link.url }}" class="header__menu-item list-menu__item link link--text focus-inset header_text_style{% if request.page_type == 'index' %} header_text_reverse{% endif %}"{% if link.current %} aria-current="page"{% endif %}>
      <span {%- if link.current %} class="header__active-menu-item"{% endif %}>{{ link.title | escape }}</span>
    </a>
  {%- endif -%}
</li>
{%- endfor -%}
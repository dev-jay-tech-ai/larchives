{{ block.settings.page.content }}

{% assign collectionList = '' | split: '' %}
{%- for collection in product.collections -%}
    {% assign collectionName = collection.title | split: '_' | first | split: '' %}
    {% assign collectionList = collectionList | concat: collectionName | join: '' %}
{% endfor %}
{% comment %}{{ collectionList }} {{ product.type }}{% endcomment %}
{% assign product_type = product.type | downcase %}
{% if collectionList contains "(m)" %}
  {% if product_type contains "shoes" or
    product_type contains "boots" or 
    product_type contains "platche" or 
    product_type contains "roper" or 
    product_type contains "boots" or 
    product_type contains "sandals" or 
    product_type contains "slippers" or 
    product_type contains "mules" or 
    product_type contains "sneakers" 
  %}
    {% render "size-shoes-m" %}

  {% elsif product_type contains "clothes" %}
    {% render "size-top-m" %}<br>
    {% render "size-pants-m" %}
    
  {% elsif product_type contains "top" or product_type contains "outer" or product_type contains "dress" %}
    {% render "size-top-m" %}
  {% elsif product_contains contains "pants" %}
    {% render "size-pants-m" %}

  {% elsif product_type contains "belt" %}
    {% render "size-belt-m" %}
  {% endif %}
{% else %}
  {% if product_type contains "shoes" or
    product_type contains "hill" or 
    product_type contains "pumps" or 
    product_type contains "boots" or 
    product_type contains "platche" or 
    product_type contains "roper" or 
    product_type contains "boots" or 
    product_type contains "sandals" or 
    product_type contains "slippers" or 
    product_type contains "mules" or 
    product_type contains "sneakers" 
  %}
    {% render "size-shoes-w" %}
    
  {% elsif product_type contains "clothes" %}
    {% render "size-clothes-w" %}<br>
    {% render "size-pants-w" %}
  {% elsif product_type == "pants" %}
    {% render "size-pants-w" %}

  {% elsif product_type == "top" or product_type == "outer" or product_type == "dress" %}
  {% render "size-top-w" %}

  {% elsif product_type == "belt" %}
  {% render "size-belt-w" %}
  {% elsif product_type == "gloves" %}
      {% render "size-gloves" %}
  {% elsif product_type == "hat" %}
      {% render "size-hat" %}
  {% elsif product_type == "ring" %}
      {% render "size-ring" %}            
  {% elsif product_type == "bracelet" %}
      {% render "size-bracelet" %}
  {% endif %}
{% endif %}
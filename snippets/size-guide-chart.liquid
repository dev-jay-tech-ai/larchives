{{ block.settings.page.content }}

{{ product.type }}
{% assign product_type = product.type | downcase %}
{% if product_type contains "(m)" %}
  {% if product_type contains "shoes" %}
    {% render "size-shoes-m" %}

  {% elsif product_type contains "clothes" %}
    {% render "size-top-m" %}
    
  {% elsif product_type contains "pants" %}
    {% render "size-pants-m" %}

  {% elsif product_type contains "accessories" %}
    {% render "size-belt-m" %}
  {% endif %}
{% else %}
  {% if product_type contains "shoes" %}
    {% render "size-shoes-w" %}
    
  {% elsif product_type contains "clothes" %}
    {% render "size-clothes-w" %}<br><br>
    {% render "size-pants-w" %}
  {% elsif product_type == "pants" %}
    {% render "size-pants-w" %}

  {% elsif product_type == "top" or product_type == "outer" or product_type == "dress" %}
  {% render "size-top-w" %}

  {% elsif product_type == "belt" %}
  {% render "size-belt-w" %}
  {% elsif product_type == "gloves" %}
      {% render "size-gloves" %}
  {% elsif product_type == "hat" %}
      {% render "size-hat" %}
  {% elsif product_type == "ring" %}
      {% render "size-ring" %}            
  {% elsif product_type == "bracelet" %}
      {% render "size-bracelet" %}
  {% endif %}
{% endif %}